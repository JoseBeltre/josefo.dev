---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'button'> {
  class?: string
}

const { class: className = '', ...rest } = Astro.props
---

<button class={`py-3 px-6 text-sm cursor-pointer hover:scale-105 transition-all hover:tracking-wider ${className}`} {...rest}>
  (<slot />)
</button>